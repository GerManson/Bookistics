<!DOCTYPE html>
<html>
<head>
  <title>ReadingList</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Irish+Grover&v2' %>

  <%= yield :head %>
</head>
<body>

  <div id="header">
    [
    <% if signed_in? %>
      <%= link_to 'Home', root_path %> |
      <%= link_to 'Profile', user_path(current_user) %> |
      <%= link_to 'Latest users', users_path %> |
      <%= link_to 'Latest books', books_path %> |
      <%= link_to 'Search Books', new_book_path %> |
      <%= link_to 'Sign out', signout_path %>
    <% else %>
      <%= link_to 'Home', root_path %> |
      <%= link_to 'Latest users', users_path %> |
      <%= link_to 'Latest books', books_path %> |
      <%= link_to 'Sign in with twitter!', '/auth/twitter' %>
    <% end %>
    ]
  </div>

  <% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:error] %>
    <div id="error"><%= flash[:error] %></div>
  <% end %>

  <div id="logo">
    <h1>Reading list!</h1>
  </div>
  <div id="content">
    <%= yield %>
  </div>
</body>
</html>
