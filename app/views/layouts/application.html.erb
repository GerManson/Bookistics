<!DOCTYPE html>
<html>
<head>
  <title>ReadingList</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div>
  [
  <% if signed_in? %>
    <a href="/signout">Sign out</a>
  <% else %>
    <a href="/auth/twitter">Sign in with twitter!</a>
  <% end %>
  ]
</div>
<% if signed_in? %>
  <div>Welcome <%= link_to current_user.name, profile_path(current_user) %>!</div>
<% end %>

<%= yield %>

</body>
</html>
