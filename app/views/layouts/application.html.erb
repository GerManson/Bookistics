<!DOCTYPE html>
<html>
<head>
  <title>ReadingList</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Irish+Grover&v2' %>

  <%= yield :head %>
</head>
<body>

  <div id="header">
    [
    <% if signed_in? %>
    <%= link_to 'Profile', profile_path(current_user) %> |
    <a href="<%= new_book_path %>">Search books</a> |
    <a href=<%= signout_path %>>Sign out</a>
    <% else %>
    <a href="/auth/twitter">Sign in with twitter!</a>
    <% end %>
    ]
  </div>

  <div id="logo">
    <h1>Search your book!</h1>
  </div>
  <div id="content">
    <%= yield %>
  </div>
</body>
</html>
