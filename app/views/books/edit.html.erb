<%= render :partial => 'book', :locals => { :book => @book } %>
<p>
<%= form_tag(book_path(@book.asin), :remote => :true, :method => :put) do %>
  <%= label_tag 'Start Date' %><%= text_field_tag 'start_date', @log.start_date %>
  <%= label_tag 'Finish Date' %><%= text_field_tag 'finish_date', @log.finish_date %>
  <%= submit_tag 'Update' %>
<% end %>
</p>