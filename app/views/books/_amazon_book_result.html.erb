<li class="search-item">
  <div class="row">
    <div class="span2 columns"><%= image_tag book.icon_url %></div>
    <div class="span10 columns">
      <strong><%= html_encode(book.title) %></strong>
      <span>(<%= html_encode(book.authors) %>)</span>
    </div>
    <div class="span3 columns">
      <div id="book-controls-<%= book.asin %>">
        <%= render 'shared/book_controls', :asin => book.asin %>
      </div>
    </div>
  </div>
</li>
