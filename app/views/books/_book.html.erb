<div>
  <table width="100%">
    <tr>
      <td width="20%" style="text-align=center;">
        <img src="<%= book.image_url %>">
      </td>
      <td>
        <table>
          <tr><td>Title:</td><td><% if current_user %><%= link_to book.title, book_path(book) %><% else %><%= book.title %><% end %></td></tr>
          <tr><td>Author(s):</td><td><%= book.authors %></td></tr>
          <tr><td># of pages:</td><td><%= book.pages %></td></tr>
          <tr><td>Some readers:</td><td>
            <%= get_book_users_links book %>
          </td></tr>
        </table>
      </td>
    </tr>
  </table>
</div>
