<p>
  <div class="row">
    <div class="span3 columns">
      <%= link_to book.details_url do %>
        <%= image_tag(book.image_url, :class => 'block') %>
      <% end %>
    </div>
    <div class="span9 columns">
      <div class="info">
        <h4>
          <% if current_user %><%= link_to book.title, book_path(book) %><% else %><%= book.title %><% end %>
        </h4>
        <p>
          <strong><%= book.authors %>, <%= book.pages %> pages.</strong>
        </p>
        <% if book.editorial_review %>
          <div class="editorial_review">
            <span class="control"><a class="show">Show editorial review</a></span>
            <div class="content hidden">
              <%= book.editorial_review.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <% if current_user %>
      <div class="span3 columns">
        [
        <% if current_user.has_book?(book.asin) %>
          <%= link_to 'Remove', book_path(book), :remote => true, :method => :delete %>
        <% else %>
          <%= link_to 'Add', book_path(book), :remote => true, :method => :post %>
        <% end %>
        ]
      </div>
    <% end %>
  </div>
</p>
